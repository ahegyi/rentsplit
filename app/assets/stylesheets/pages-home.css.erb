 .container-fluid.splash-cover {
   background: #000000 url(<%= asset_path 'background_cover.jpg' %>) no-repeat 0px -50px;
   background-size: cover;
 }
 .splash-cover .container {
   margin-top: 30px;
   margin-bottom: 170px;
 }
 .splash-cover .container .row-fluid .span12 .heading {
   font-size: 58px;
   line-height: 64px;
   font-family:"raleway";
   text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.498039);
 }
 .splash-cover .container .row-fluid .span12 p {
   font-size: 17px;
 }

 .container.marketing-container {
   margin-top: 60px;
 }

 .marketing-container .row-fluid .span4 .heading {
   font-size: 29px;
   text-align: center;
   color: #454545;
   font-weight: normal;
 }
 .marketing-container .row-fluid .span4 p {
   font-weight: 300;
   font-size: 16px;
   text-align: center;
   line-height: 25px;
 }
 .container.tagline {
   padding: 60px 0px 60px 0px;
 }
 .tagline .row-fluid .span12 p {
   font-weight: 300;
   font-size: 22px;
   text-align: center;
 }